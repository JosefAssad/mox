<VirtualHost *:80>

	ServerName			${domain}
	ServerAlias			${domain}

	DocumentRoot			/var/www/html

</VirtualHost>

<VirtualHost *:443>

	ServerName			${domain}
	ServerAlias			${domain}

	TimeOut	1200

	DocumentRoot			/var/www/html

	SSLEngine			On
	SSLProtocol			All -SSLv2 -SSLv3

	SSLCertificateFile		/etc/apache2/certs/magenta-aps.dk.crt
	SSLCertificateKeyFile		/etc/apache2/certs/magenta-aps.dk.key
	SSLCACertificateFile		/etc/apache2/certs/intermediate.crt

	CustomLog			/var/log/mox/access.log combined
	ErrorLog			/var/log/mox/error.log

	# Redirect / to /info/ 
	RewriteEngine			on
	RewriteRule			"^/$" "/info/" [R]
	# Redirect from www. to /       # Really redirect all but ${domain}

	Alias				/info /var/www/html/
	<Directory /var/www/html>
		AllowOverride		All
		Require			all granted
	</Directory>

	Alias				/oio /srv/mox/scripts/
	<Directory "/srv/mox/scripts">
		AllowOverride		All
		Require			all granted
		Options			+ExecCGI
		Allow			from all
		Order			allow,deny
		AddHandler		cgi-script .py
	</Directory>

    # Tomcat redirect
	JkMount				/MoxDocumentUpload/* ajp13_worker


	WSGIDaemonProcess		oio_rest user=www-data group=www-data threads=5
	WSGIScriptAlias			/ /var/www/wsgi/oio_rest.wsgi
	WSGIPassAuthorization		On

	<Directory /var/www/wsgi>
		WSGIProcessGroup	oio_rest
		WSGIApplicationGroup	%{GLOBAL}
		require			all granted
	</Directory>

</VirtualHost>
